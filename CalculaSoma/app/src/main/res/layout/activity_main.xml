<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtValor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padrao"
        android:layout_marginTop="@dimen/padrao"
        android:layout_marginRight="@dimen/padrao"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtValor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padrao"
        android:layout_marginTop="@dimen/padrao"
        android:layout_marginRight="@dimen/padrao"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padrao"
        android:layout_marginTop="@dimen/padrao"
        android:layout_marginRight="@dimen/padrao"
        android:layout_weight="1"
        android:onClick="calcula"
        android:text="@string/calcula" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padrao"
        android:layout_marginTop="@dimen/padrao"
        android:layout_marginRight="@dimen/padrao"
        android:layout_weight="1" />
</LinearLayout>